<div class="container-fluid mainBox">
  <div class="row">
    <div
      class="flip-box col-xs-12 col-md-6 col-lg-6 pt-1"
      style="min-height: 480px;"
    >
      <div class="flip-box-inner">
        <div class="flip-box-front">
          <img
            src="./images/dance.jpg"
            alt="Music"
            class="img-fluid"
            style="filter: blur(2px); width: 100%; height: 100%;"
          />
          <div
            style="-webkit-text-stroke: 1px black;
          -webkit-text-fill-color: white; font-size: 80px; color: white;"
            class="centered"
          >
            Music
          </div>
        </div>
        <div class="flip-box-back" style="background-color: rgb(0, 162, 255);">
          <u><h2>Music</h2></u>
          <%for(i of event){%> <% if(i.type=="Music"){ %>
          <a style="color: white;" href="event-list/<%= i.number %>"
            ><%= i.name %></a
          ><br />
          <% } %> <%}%>
        </div>
      </div>
    </div>
